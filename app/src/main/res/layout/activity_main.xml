        android:layout_height="wrap_content"
        android:text="Akceptejo"
        android:id="@+id/button_akceptejo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enirejo"
        android:id="@+id/button_enirejo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alighilo"
        android:id="@+id/button_alighilo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
