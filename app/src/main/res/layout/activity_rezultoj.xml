<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="org.esperanto_france.samopiniuloj.RezultojActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_gravity="top"
        android:background="@color/sam_fond2"
        android:padding="16dp"
        android:focusableInTouchMode="false"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/sam_txt_0"
            android:text="15 Aprilo 2015"
            android:id="@+id/rezultoj_dato" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/sam_txt_1"
            android:text="@string/la_hodiaua_vorto_estas"
            android:id="@+id/rezultoj_txt1"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/sam_txt_0"
            android:text="@string/vorto2"
            android:id="@+id/rezultoj_vorto" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="48dp"
            android:layout_height="fill_parent"
            android:background="@color/sam_fond_blanc"
            android:id="@+id/linearLayout3">

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:id="@+id/viajRezultoj"
                android:layout_marginTop="16dp"
                android:src="@mipmap/ic_person_black_18dp"
                android:tint="@color/sam_bouton_fonce"
                style="?android:attr/borderlessButtonStyle"
                android:cropToPadding="false"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:focusable="false" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:id="@+id/ludintoj"
                android:layout_marginTop="16dp"
                android:src="@mipmap/ic_group_black_18dp"
                android:tint="@color/sam_secondaire"
                style="?android:attr/borderlessButtonStyle"
                android:cropToPadding="false"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:focusable="false" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:id="@+id/vortoj"
                android:layout_marginTop="16dp"
                android:src="@mipmap/ic_message_black_18dp"
                android:tint="@color/sam_secondaire"
                style="?android:attr/borderlessButtonStyle"
                android:cropToPadding="false"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:focusable="false" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/linearLayout3"
            android:layout_toEndOf="@+id/linearLayout3"
            android:padding="16dp"
            android:elevation="4dp"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/viaj_rezultoj"
                android:id="@+id/titolo_viaj_rezultoj"
                android:textColor="@color/sam_txt_1" />

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/linearLayout3"
                android:layout_toEndOf="@+id/linearLayout3"
                android:layout_gravity="top"
                android:layout_marginTop="16dp"
                android:measureWithLargestChild="false"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:minHeight="32dp"
                    android:nestedScrollingEnabled="true"
                    android:id="@+id/tablerow0"
                    android:background="@color/sam_fond"
                    android:layout_gravity="top">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/col_proponoj"
                        android:id="@+id/col_proponoj"
                        android:layout_column="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/col_poentoj"
                        android:id="@+id/col_poentoj"
                        android:layout_gravity="right"
                        android:textAlignment="viewEnd" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:measureWithLargestChild="true"
                    android:id="@+id/id_tablerow1"
                    android:focusableInTouchMode="false">
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="propono 1"
                        android:id="@+id/propono_1"
                        android:layout_column="1"
                        android:textColor="@color/sam_txt_0"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="3"
                        android:id="@+id/poentoj1"
                        android:layout_gravity="right|top"
                        android:textColor="@color/sam_txt_0"
                        android:textAlignment="viewEnd" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:measureWithLargestChild="false"
                    android:id="@+id/id_tablerow2"
                    android:focusableInTouchMode="false">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="propono 2"
                        android:id="@+id/propono_2"
                        android:layout_column="1"
                        android:textColor="@color/sam_txt_0"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="24"
                        android:id="@+id/poentoj2"
                        android:layout_gravity="right"
                        android:textColor="@color/sam_txt_0"
                        android:textAlignment="viewEnd" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:measureWithLargestChild="true"
                    android:id="@+id/id_tablerow3"
                    android:focusableInTouchMode="false"
                    android:layout_gravity="top">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="propono 3"
                        android:id="@+id/propono_3"
                        android:layout_column="1"
                        android:textColor="@color/sam_txt_0"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="12"
                        android:id="@+id/poentoj3"
                        android:layout_gravity="right"
                        android:textColor="@color/sam_txt_0"
                        android:textAlignment="viewEnd" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:id="@+id/table_sumo"
                    android:layout_gravity="top">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/col_sumo"
                        android:id="@+id/sumo"
                        android:layout_column="1"
                        android:textColor="@color/sam_accentuation"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="42"
                        android:id="@+id/sumo_poentoj"
                        android:layout_gravity="right"
                        android:textColor="@color/sam_accentuation" />
                </TableRow>


            </TableLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
