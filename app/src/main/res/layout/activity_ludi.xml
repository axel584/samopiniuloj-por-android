<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/AppTheme"
    tools:context="org.esperanto_france.samopiniuloj.LudiActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:gravity="right">

        <TextView android:text="@string/bonvenon_ludanto" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bonvenon_ludando"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:gravity="right"
            android:textColor="@color/sam_txt_1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">

        <TextView android:text="@string/nuna_horo" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nuna_horo"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:gravity="right"
            android:textColor="@color/sam_txt_1" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="97dp"
        android:layout_marginStart="97dp" />

</RelativeLayout>
