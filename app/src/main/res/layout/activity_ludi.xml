<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="org.esperanto_france.samopiniuloj.LudiActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:gravity="right">

        <TextView android:text="@string/bonvenon_ludanto" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bonvenon_ludando"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:gravity="right"
            android:textColor="@color/sam_txt_1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">

        <TextView android:text="@string/nuna_horo" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nuna_horo"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:gravity="right"
            android:textColor="@color/sam_txt_1" />
    </LinearLayout>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_hodiaua_vorto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@color/sam_carte"
        android:layout_marginTop="16dp"
        android:background="@color/sam_carte"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_taga_vorto"
                android:layout_gravity="center_vertical|bottom|left|top"
                android:src="@drawable/dentradajxo"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/img_nuna_vorto"
                android:padding="0dp"
                android:id="@+id/info_ludo">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/sam_txt_2"
                    android:text="@string/la_hodiaua_vorto_estas"
                    android:id="@+id/txt_hodiaua_vorto"
                    android:layout_gravity="center_horizontal|top"
                    android:paddingLeft="8dp"
                    android:paddingTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/sam_txt_0"
                    android:id="@+id/taga_vorto"
                    style="@style/Base.TextAppearance.AppCompat.Headline"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/txt_hodiaua_vorto"
                    android:layout_marginLeft="8dp"
                    android:nestedScrollingEnabled="true" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TableLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TableRow android:layout_width="fill_parent">

            <EditText
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="text"
                android:id="@+id/propono_1"
                android:hint="@string/txt_propono_1"
                android:textColor="@color/sam_txt_1"
                android:textColorHint="@color/sam_txt_2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/done_1"
                android:src="@mipmap/ic_done_black_18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:contentDescription=""
                android:tint="@color/sam_bone" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="text"
                android:id="@+id/propono_2"
                android:hint="@string/txt_propono_2"
                android:textColor="@color/sam_txt_1"
                android:textColorHint="@color/sam_txt_2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/done_2"
                android:src="@mipmap/ic_done_black_18dp"
                android:tint="@color/sam_bone"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp" />

        </TableRow>

        <TableRow>

            <EditText
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="text"
                android:id="@+id/propono_3"
                android:hint="@string/txt_propono_3"
                android:textColor="@color/sam_txt_1"
                android:textColorHint="@color/sam_txt_2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/done_3"
                android:src="@mipmap/ic_done_black_18dp"
                android:tint="@color/sam_bone"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="text"
                android:id="@+id/propono_4"
                android:hint="@string/txt_propono_4"
                android:textColor="@color/sam_txt_1"
                android:textColorHint="@color/sam_txt_2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/done_4"
                android:src="@mipmap/ic_done_black_18dp"
                android:tint="@color/sam_bone"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp" />

        </TableRow>

        <TableRow>

            <EditText
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="text"
                android:id="@+id/propono_5"
                android:hint="@string/txt_propono_5"
                android:textColor="@color/sam_txt_1"
                android:textColorHint="@color/sam_txt_2"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/done_5"
                android:src="@mipmap/ic_done_black_18dp"
                android:tint="@color/sam_bone"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="text"
                android:id="@+id/propono_6"
                android:hint="@string/txt_propono_6"
                android:textColor="@color/sam_txt_1"
                android:textColorHint="@color/sam_txt_2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/done_6"
                android:src="@mipmap/ic_done_black_18dp"
                android:tint="@color/sam_bone"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp" />

        </TableRow>

        <TableRow>

            <EditText
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="text"
                android:id="@+id/propono_7"
                android:hint="@string/txt_propono_7"
                android:textColor="@color/sam_txt_1"
                android:textColorHint="@color/sam_txt_2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/done_7"
                android:src="@mipmap/ic_done_black_18dp"
                android:tint="@color/sam_bone"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="text"
                android:id="@+id/propono_8"
                android:hint="@string/txt_propono_8"
                android:textColor="@color/sam_txt_1"
                android:textColorHint="@color/sam_txt_2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/done_8"
                android:src="@mipmap/ic_done_black_18dp"
                android:tint="@color/sam_bone"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp" />

        </TableRow>

    </TableLayout>


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical"
        android:weightSum="1">

        <Button android:id="@+id/btn_sendu"
        android:layout_width="wrap_content" android:layout_height="0dp"
        android:layout_marginTop="16dp" android:text="@string/action_sendu"
        android:layout_gravity="right|top"
        android:layout_weight="0.42"
        android:clickable="false"
        android:focusable="false"
        android:background="@color/sam_bouton_fonce"
        android:textColor="@color/sam_bouton_txt" />
    </LinearLayout>

</LinearLayout>
