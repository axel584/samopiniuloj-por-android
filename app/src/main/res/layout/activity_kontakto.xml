<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.esperanto_france.samopiniuloj.KontaktoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/txt_kontakto1"
        android:id="@+id/txtKontakto1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/via_mesagxo"
        android:id="@+id/txtKontakto2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputMesagxo"
        android:inputType="textMultiLine"
        android:layout_marginTop="8dp"
        android:lines="5"
        android:linksClickable="true" />

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical"
        android:weightSum="1">

        <Button android:id="@+id/btn_sendu"
            android:layout_width="wrap_content" android:layout_height="0dp"
            android:layout_marginTop="16dp" android:text="@string/action_sendu"
            android:layout_gravity="right|top"
            android:layout_weight="0.42"
            android:clickable="false"
            android:focusable="false"
            android:background="@color/sam_bouton_fonce"
            android:textColor="@color/sam_bouton_txt" />
    </LinearLayout>

</LinearLayout>
