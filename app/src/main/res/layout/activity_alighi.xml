<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.esperanto_france.samopiniuloj.AlighiActivity"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_below="@id/toolbar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"  >

        <LinearLayout android:id="@+id/email_login_form"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/txt_alighi1"
                android:text="@string/txt_alighi1"
                style="@style/TexteNormal" />

            <TextView android:id="@+id/txt_alighi2"
                android:text="@string/txt_alighi2"
                style="@style/TexteNormal.Clair"
                android:layout_marginTop="4dp" />

            <EditText android:id="@+id/enirnomo"
                android:hint="@string/prompt_enirnomo"
                android:layout_marginTop="8dp"
                style="@style/Input.Texte" />

            <TextView android:id="@+id/eraro_enirnomo"
                tools:text="erreur sur le nom"
                style="@style/Erreur" />

            <EditText android:id="@+id/pasvorto"
                android:hint="@string/prompt_pasvorto"
                style="@style/Input.Passe" />

            <TextView
                android:id="@+id/eraro_pasvorto"
                tools:text="erreur sur le mot de passe"
                style="@style/Erreur" />

            <EditText android:id="@+id/retadreso"
                android:hint="@string/prompt_retadreso"
                style="@style/Input.Email" />

            <TextView android:id="@+id/eraro_retadreso"
                tools:text="erreur sur l'adresse mail"
                style="@style/Erreur" />

            <Spinner android:id="@+id/landoj_spinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColor="@color/sam_txt_1"
                android:textSize="12sp"
                android:prompt="@string/prompt_lando"
                android:spinnerMode="dropdown"
                android:entries="@array/landoj"
                android:layout_gravity="left" />

            <TextView android:id="@+id/eraro_lando"
                tools:text="erreur sur le pays"
                style="@style/Erreur" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="8dp">

                <Button android:id="@+id/btn_aligxu"
                    android:layout_width="wrap_content" android:layout_height="48dp"
                    android:text="@string/action_aligxu"
                    android:layout_gravity="right|top"
                    android:clickable="false"
                    android:focusable="false"
                    android:background="@color/sam_bouton_fonce"
                    android:textColor="@color/sam_bouton_txt"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp">

            <TextView android:id="@+id/textView"
                android:text="@string/txt_alighi3"
                android:layout_marginTop="16dp"
                style="@style/TexteNormal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_eniru"
                android:id="@+id/btn_eniru"
                android:layout_gravity="end"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/sam_bouton_fonce"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
