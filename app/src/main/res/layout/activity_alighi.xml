<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.esperanto_france.samopiniuloj.AlighiActivity"
    android:orientation="vertical">

    <!-- Login progress -->
    <ProgressBar android:id="@+id/login_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" android:visibility="gone" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout android:id="@+id/email_login_form" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:text="@string/txt_alighi1"
                android:id="@+id/txt_alighi1"
                android:textColor="@color/sam_texte" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:text="@string/txt_alighi2"
                android:id="@+id/txt_alighi2"
                android:textColor="@color/sam_texte" />

            <EditText android:id="@+id/enirnomo" android:layout_width="match_parent"
                android:layout_height="48dp" android:hint="@string/prompt_enirnomo"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="text"
                android:layout_marginTop="16dp" />

            <EditText android:id="@+id/pasvorto" android:layout_width="match_parent"
                android:layout_height="48dp" android:hint="@string/prompt_pasvorto"
                android:imeActionId="@+id/login"
                android:imeOptions="actionUnspecified" android:inputType="textPassword"
                android:maxLines="1" android:singleLine="true" />

            <EditText android:id="@+id/retadreso" android:layout_width="match_parent"
                android:layout_height="48dp" android:hint="@string/prompt_retadreso"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="textEmailAddress" />

            <EditText android:id="@+id/lando" android:layout_width="match_parent"
                android:layout_height="48dp" android:hint="@string/prompt_lando"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:text="@string/txt_forgesita_pasvorto"
                android:id="@+id/txt_forgesita_pasvorto"
                android:layout_marginTop="8dp"
                android:layout_gravity="left" />

            <Button android:id="@+id/btn_aligxu"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="8dp" android:text="@string/action_aligxu"
                android:layout_gravity="right|top"
                android:clickable="false"
                android:focusable="false"
                android:background="@color/sam_bouton1_bg"
                android:textColor="@color/sam_bouton_txt" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="@string/txt_alighi3"
            android:id="@+id/textView"
            android:layout_marginTop="16dp"
            android:password="false"
            android:textColor="@color/sam_texte" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_eniru"
            android:id="@+id/btn_eniru"
            android:layout_gravity="right"
            android:background="@color/sam_bouton2_bg"
            android:textColor="@color/sam_bouton_txt"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</LinearLayout>
