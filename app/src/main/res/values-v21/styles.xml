<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BlocEntete">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:background">@color/sam_fond2</item>
        <item name="android:padding">16dp</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="BlocResultats">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/sam_fond</item>
        <item name="android:padding">16dp</item>
        <item name="android:focusable">true</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="EnteteResultats">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:background">@color/sam_fond2</item>
        <item name="android:padding">16dp</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="BoutonPrimaire" parent="@android:style/Widget.Material.Light.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/sam_bouton_txt</item>
        <item name="android:background">@color/sam_bouton_fonce</item>
    </style>

    <style name="BoutonSecondaire" parent="@android:style/Widget.Material.Light.Button.Borderless" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/sam_bouton_fonce</item>
    </style>

</resources>
