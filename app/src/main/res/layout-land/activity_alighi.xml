<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.esperanto_france.samopiniuloj.AlighiActivity"
    android:orientation="vertical">

    <!-- Login progress -->
    <ProgressBar android:id="@+id/login_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" android:visibility="gone" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:layout_marginRight="8dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:text="@string/txt_alighi1"
                    android:id="@+id/txt_alighi1"
                    android:textColor="@color/sam_txt_0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:text="@string/txt_alighi2"
                    android:id="@+id/txt_alighi2"
                    android:textColor="@color/sam_txt_2" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:baselineAligned="false"
                    android:layout_marginTop="48dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/sam_txt_1"
                        android:text="@string/txt_alighi3"
                        android:id="@+id/txt_alighi3"
                        android:password="false" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/action_eniru"
                        android:id="@+id/btn_eniru"
                        style="?android:attr/borderlessButtonStyle"
                        android:textColor="@color/sam_bouton_fonce"
                        android:layout_gravity="right" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginLeft="16dp">

                <LinearLayout android:id="@+id/email_login_form" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="vertical"
                    android:weightSum="1">

                    <EditText android:id="@+id/enirnomo" android:layout_width="match_parent"
                        android:layout_height="48dp" android:hint="@string/prompt_enirnomo"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:inputType="text"
                        android:textColor="@color/sam_txt_1"
                        android:textColorHint="@color/sam_txt_2" />

                    <EditText android:id="@+id/pasvorto" android:layout_width="match_parent"
                        android:layout_height="48dp" android:hint="@string/prompt_pasvorto"
                        android:imeOptions="actionUnspecified" android:inputType="textPassword"
                        android:maxLines="1" android:singleLine="true"
                        android:textColor="@color/sam_txt_1"
                        android:textColorHint="@color/sam_txt_2" />

                    <EditText android:id="@+id/retadreso" android:layout_width="match_parent"
                        android:layout_height="48dp" android:hint="@string/prompt_retadreso"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/sam_txt_1"
                        android:textColorHint="@color/sam_txt_2" />

                    <EditText android:id="@+id/lando" android:layout_width="match_parent"
                        android:layout_height="48dp" android:hint="@string/prompt_lando"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:inputType="text"
                        android:textColor="@color/sam_txt_1"
                        android:textColorHint="@color/sam_txt_2"
                        android:textIsSelectable="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:text="@string/txt_forgesita_pasvorto"
                        android:id="@+id/txt_forgesita_pasvorto"
                        android:layout_marginTop="8dp" />

                    <Button android:id="@+id/btn_aligxu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp" android:text="@string/action_aligxu"
                        android:layout_gravity="right|top"
                        android:background="@color/sam_bouton_fonce"
                        android:textColor="@color/sam_bouton_txt" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
