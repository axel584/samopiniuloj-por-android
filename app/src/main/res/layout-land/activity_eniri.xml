<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.esperanto_france.samopiniuloj.EniriActivity">

    <!-- Login progress -->
    <ProgressBar android:id="@+id/login_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" android:visibility="gone" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="3">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/sam_txt_1"
                    android:text="@string/txt_eniri1"
                    android:id="@+id/txt_enkonduko" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginTop="32dp"
                    android:gravity="bottom">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/sam_txt_1"
                        android:text="@string/txt_eniri_nova_ludanto"
                        android:id="@+id/textView"
                        android:password="false" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/action_aligxu"
                        android:id="@+id/btn_aligxu"
                        android:layout_gravity="right"
                        android:layout_marginTop="8dp"
                        style="?android:attr/borderlessButtonStyle"
                        android:textColor="@color/sam_bouton_fonce" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginLeft="8dp">

                <AutoCompleteTextView android:id="@+id/enirnomo" android:layout_width="fill_parent"
                    android:layout_height="48dp" android:hint="@string/prompt_enirnomo"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:inputType="text"
                    android:textColor="@color/sam_txt_1"
                    android:textColorHint="@color/sam_txt_2" />

                <EditText android:id="@+id/pasvorto" android:layout_width="fill_parent"
                    android:layout_height="48dp" android:hint="@string/prompt_pasvorto"
                    android:inputType="textPassword"
                    android:maxLines="1" android:singleLine="true"
                    android:text="@color/sam_txt_1"
                    android:textColor="@color/sam_txt_2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:text="@string/txt_forgesita_pasvorto"
                    android:id="@+id/txt_forgesita_pasvorto"
                    android:layout_marginTop="8dp" />

                <Button android:id="@+id/btn_eniru"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginTop="16dp" android:text="@string/action_eniru"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_gravity="right"
                    android:background="@color/sam_bouton_fonce"
                    android:textColor="@color/sam_bouton_txt" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

