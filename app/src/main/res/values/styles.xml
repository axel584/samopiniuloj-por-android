<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TexteNormal" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/texte_normal</item>
        <item name="android:textColor">@color/sam_txt_1</item>
    </style>

    <style name="TexteNormal.Alinea">
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="TexteNormal.Clair">
        <item name="android:textColor">@color/sam_txt_2</item>
    </style>

    <style name="TexteNormal.Foncé">
        <item name="android:textColor">@color/sam_txt_0</item>
    </style>

    <style name="TexteNormal.Important">
        <item name="android:textColor">@color/sam_accentuation</item>
    </style>

    <style name="TexteNormal.Important.Alinea">
        <item name="android:paddingTop">8dp</item>
    </style>


    <style name="Input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/sam_txt_1</item>
        <item name="android:textColorHint">@color/sam_txt_2</item>
    </style>

    <style name="Input.Texte">
        <item name="android:inputType">text</item>
    </style>

    <style name="Input.Texte.Propono">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Input.Passe">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="Input.Email">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="Input.Texte.Multi">
        <item name="android:maxLines">6</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Erreur">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/sam_erreur</item>
        <item name="android:textSize">@dimen/texte_small</item>
    </style>

    <style name="Titre">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/texte_xlarge</item>
        <item name="android:textColor">@color/sam_txt_1</item>
    </style>

    <style name="TitreDate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/texte_xlarge</item>
        <item name="android:textColor">@color/sam_txt_0</item>
    </style>

    <style name="Vorto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/texte_xlarge</item>
        <item name="android:textColor">@color/sam_txt_0</item>
    </style>

    <style name="EnteteTableau" parent="TexteNormal.Clair">
        <item name="android:layout_column">1</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="EnteteTableau.Nombre" parent="TexteNormal.Clair">
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="LigneTableau">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:measureWithLargestChild">true</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="EltTableau" parent="TexteNormal.Foncé">
        <item name="android:layout_column">1</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="EltTableau.Nombre" parent="TexteNormal.Foncé">
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="EltTableau.Inactif" >
        <item name="android:textColor">@color/sam_txt_2</item>
    </style>

    <style name="EltTableau.Nombre.Inactif">
        <item name="android:textColor">@color/sam_txt_2</item>
    </style>

    <style name="PiedTableau" parent="TexteNormal.Important">
        <item name="android:layout_column">1</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="PiedTableau.Nombre" parent="TexteNormal.Important">
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">right</item>
    </style>


    <style name="BtnRezulto" parent="android:Widget.Holo.Button.Borderless">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:tint">@color/sam_secondaire</item>
        <item name="android:cropToPadding">false</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="BtnRezulto.Actif">
        <item name="android:tint">@color/sam_bouton_fonce</item>
    </style>

    <style name="EnteteResultats">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:background">@color/sam_fond2</item>
        <item name="android:padding">16dp</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="BlocResultats">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/sam_fond</item>
        <item name="android:padding">16dp</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="TableauResultats">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:measureWithLargestChild">false</item>
        <item name="android:stretchColumns">1</item>
    </style>

    <style name="MenuResultats">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/sam_fond_blanc</item>

    </style>

    <style name="Sendita">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@mipmap/ic_done_black_18dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:tint">@color/sam_bone</item>
    </style>

</resources>


